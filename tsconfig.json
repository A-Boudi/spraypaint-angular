{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./index.d.ts"
  ],
  "types": ["node", "mocha", "es6-promise"],
  "exclude": [
    "node_modules",
    "test"
  ]
}

