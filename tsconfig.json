{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "lib/",
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/",
    "inlineSourceMap": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts"
  ]
}