{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "build/",
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": false,
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSourceMap": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "test/backwards-breaking-test.ts"
  ]
}